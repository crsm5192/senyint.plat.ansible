[Unit]
Description=Senyint Nginx Server
After=network.target

[Service]
Type=forking
PIDFile={{pl_home}}/nginx/nginx.pid
ExecStartPre={{pl_home}}/nginx/sbin/nginx -t -q -g 'daemon on; master_process on;'
ExecStart={{pl_home}}/nginx/sbin/nginx -g 'daemon on; master_process on;'
ExecReload={{pl_home}}/nginx/sbin/nginx -g 'daemon on; master_process on;' -s reload
ExecStop=-{{pl_home}}/nginx/sbin/start-stop-daemon --quiet --stop --retry QUIT/5 --pidfile {{pl_home}}/nginx/nginx.pid
TimeoutStopSec=5
KillMode=mixed

[Install]
WantedBy=multi-user.target
[Unit]
Description=Senyint Nginx Server
After=network.target

[Service]
Type=forking
PIDFile={{home}}/nginx/nginx.pid
ExecStartPre={{home}}/nginx/sbin/nginx -t -q -g 'daemon on; master_process on;'
ExecStart={{home}}/nginx/sbin/nginx -g 'daemon on; master_process on;'
ExecReload={{home}}/nginx/sbin/nginx -g 'daemon on; master_process on;' -s reload
ExecStop=-{{home}}/nginx/sbin/start-stop-daemon --quiet --stop --retry QUIT/5 --pidfile {{home}}/nginx/nginx.pid
TimeoutStopSec=5
KillMode=mixed

[Install]
WantedBy=multi-user.target
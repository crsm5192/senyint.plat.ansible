[Unit]
Description=Squid Web Proxy Server
Documentation=man:squid(8)
After=network.target network-online.target nss-lookup.target
[Service]
Type=forking
User={{pl_squid_user}}
Group={{pl_squid_group}}
PIDFile={{pl_squid_home}}/squid/run/squid.pid
ExecStartPre={{pl_squid_home}}/squid/sbin/squid --foreground -z
ExecStart={{pl_squid_home}}/squid/sbin/squid -sYC
ExecReload=/bin/kill -HUP $MAINPID
KillMode=mixed
[Install]
WantedBy=multi-user.target
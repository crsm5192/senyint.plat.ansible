Description=Plat Node-Log-Srv
After=network.target remote-fs.target nss-lookup.target
[Service]
Type=simple
Environment=HOME={{pl_home}}
Environment=PATH={{pl_home}}/node-v{{pl_node_version}}-linux-x64/bin
User={{pl_user}}
Group={{pl_group}}
ExecStart={{pl_home}}/node-v{{pl_node_version}}-linux-x64/bin/node {{pl_home}}/node-log-srv/index.js
ExecStop={{pl_home}}/node-v{{pl_node_version}}-linux-x64/bin/node {{pl_home}}/node-log-srv/stop.js
Restart=always
PIDFile={{pl_home}}/node-log-srv/pid
WorkingDirectory={{pl_home}}/node-log-srv
PrivateTmp=true
[Install]
WantedBy=multi-user.target